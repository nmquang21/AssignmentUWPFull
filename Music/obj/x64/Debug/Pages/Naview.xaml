<Page x:ConnectionId='1'
    x:Class="Music.Pages.Naview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Music.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:appmodel="using:Windows.ApplicationModel"
    
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlChromeMediumAcrylicWindowMediumBrush}">

    <Grid Background="{ThemeResource SystemControlChromeMediumAcrylicWindowMediumBrush}">
        <Grid.Resources>
            <AcrylicBrush x:Key="NavigationViewDefaultPaneBackground"
                          BackgroundSource="HostBackdrop"
                          TintColor="CornflowerBlue"
                          TintOpacity="0.35"
                          FallbackColor="FloralWhite"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <NavigationView x:ConnectionId='2' x:Name="NavView"
                                               
                                                         
                                                             
                        Grid.Row="0" Grid.Column="0"
                        IsBackButtonVisible="Collapsed"
        >
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="home" Icon="Home" Content="Home"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader x:ConnectionId='17' x:Name="MainPagesHeader"
                                           Content="Main pages"/>

                <NavigationViewItem Tag="mysong" Icon="Audio" Content="My Songs"/>
                <NavigationViewItem Tag="listsong" Content="New Songs">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE90B;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Tag="freesong" Content="Free Songs">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE762;"/> 
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Tag="upload" Content="Upload Song">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA5C;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator/>
                    <NavigationViewItem x:ConnectionId='18' x:Name="Register" Tag="register" Icon="AddFriend" Content="Register"/>
                    <NavigationViewItem x:ConnectionId='19' x:Name="Login" Tag="login" Icon="Contact" Content="Login"/>
                <NavigationViewItem x:ConnectionId='20' Tag="myInformation" Content="My Information" x:Name="myInfo">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA4A;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                
              

            </NavigationView.MenuItems>

            <NavigationView.AutoSuggestBox>
                <!-- See AutoSuggestBox documentation for
                 more info about how to implement search. -->
                <AutoSuggestBox x:ConnectionId='21' x:Name="NavViewSearchBox" QueryIcon="Find"/>
            </NavigationView.AutoSuggestBox>
            
            <ScrollViewer>
                <Frame x:ConnectionId='22' x:Name="ContentFrame" IsTabStop="True"
                                                                   >
                </Frame>
            </ScrollViewer>
            
        </NavigationView>
        <Grid x:ConnectionId='3' x:Name="AppTitleBar" Background="Transparent" VerticalAlignment="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:ConnectionId='14' x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle x:ConnectionId='15' x:Name="BackButtonBackground"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Visibility="Collapsed"
                       IsTapEnabled="True"
                                                             
                       >
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#3F000000"/>
                        <GradientStop Color="Transparent" Offset="0.2"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock x:ConnectionId='16'                                                     
                       Grid.Column="1"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="8,8,0,0"/>
        </Grid>
        <!--<MediaPlayerElement x:Name="mediaPlayer"
                            AutoPlay="False"
                            AreTransportControlsEnabled="True"
                            Grid.Row="1" Grid.Column="0">
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls Background="Chartreuse"
                                        IsStopButtonVisible="True"
                                        IsStopEnabled="True"
                                        IsTextScaleFactorEnabled="True" 
                                        IsPlaybackRateEnabled="True" 
                                        IsPlaybackRateButtonVisible="True" 
                                        IsFastForwardButtonVisible="True" 
                                        IsFastForwardEnabled="True" 
                                        IsFastRewindButtonVisible="True"
                                        IsFastRewindEnabled="True"
                                        IsNextTrackButtonVisible="True"
                                        IsPreviousTrackButtonVisible="True"/>
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>-->
        <MediaElement x:ConnectionId='4' x:Name="mediaPlayer"                                                                                                 />

        <CommandBar Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" Background="SteelBlue" Margin="0 0 0 0">
            <AppBarSeparator/>
            <AppBarButton x:ConnectionId='9' x:Name="PreviousButton" Icon="Previous" Label="Previous"                                />
            <AppBarButton x:ConnectionId='10' x:Name="StatusButton" Icon="Pause" Label="Play"                             />
            <AppBarButton x:ConnectionId='11' x:Name="NextButton" Icon="Next" Label="Next"                           />
            <AppBarButton x:ConnectionId='12' x:Name="RefreshButton" Icon="Refresh" Label="Repeat"                              />
            <CommandBar.Content>
                <TextBlock x:ConnectionId='13'  Foreground="AliceBlue" FontSize="18" x:Name="ControlLabel" Text="Please choose a song." Margin="30,1"/>
            </CommandBar.Content>
        </CommandBar>
        <StackPanel Grid.Row="1" Background="SteelBlue">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="3.5*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>

                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Slider x:ConnectionId='7' Name="timelineSlider"                                            Background="DarkGray" Foreground="White" Margin="50 10 50 0"/>
                    <TextBlock x:ConnectionId='8' x:Name="timeSlider"></TextBlock>
                </StackPanel>
                <StackPanel   Grid.Row="0" Grid.Column="1" >
                    <AppBarButton x:ConnectionId='6' x:Name="MuteButton"  Margin="0 7 -20 0"                      Icon="Volume" Foreground="White">
                       
                    </AppBarButton>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2"  Margin="10 10 50 0">
                    <Slider x:ConnectionId='5' Name="volume"  Background="DarkGray" Foreground="White" Width="100"                                      Minimum="0" Value="100"/>
                    <!--<Button Click="ButtonBase_OnClick">ChangeState</Button>-->
                </StackPanel>
                
            </Grid>
        </StackPanel>
    </Grid>
</Page>

